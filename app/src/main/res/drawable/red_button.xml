<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="false" android:dither="true" android:variablePadding="false">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ef4444" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="12dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#992f2f" android:startColor="#ef4444" />
            <stroke android:width="1dp" android:color="#992f2f" />
            <corners android:radius="12dp" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
</selector>